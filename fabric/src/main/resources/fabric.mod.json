{
  "schemaVersion": 1,
  "id": "vartypes",
  "version": "${version}",
  "name": "Various Types",
  "description": "A diverse and multi-layered gameplay customisation system!",
  "authors": [
    "Lying"
  ],
  "contact": {
	  "homepage": "https://lyinginbedmon.carrd.co/",
	  "sources": "https://github.com/Lyinginbedmon/VariousTypes"
  },
  "license": "CC0-1.0",
  "icon": "assets/vartypes/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.lying.fabric.VariousTypesFabric"
    ],
    "client": [
      "com.lying.fabric.client.VariousTypesFabricClient"
    ],
	"fabric-datagen": [
		"com.lying.fabric.data.VTDataGenerators"
	],
	"cardinal-components": [
		"com.lying.fabric.component.VTComponents"
	]
  },
  "custom": {
	"cardinal-components": [
		"vartypes:character_sheet",
		"vartypes:mob_character_sheet"
	]
  },
  "mixins": [
    "vartypes.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.15.11",
    "minecraft": "~1.20.6",
    "java": ">=21",
    "architectury": ">=12.1.2",
    "fabric-api": "*"
  },
  "suggests": {
    "another-mod": "*"
  }
}
